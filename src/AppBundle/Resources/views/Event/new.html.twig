{% extends '::base.html.twig' %}

{% block top %}
    <h1 class="text-center">Dodaj event</h1>
{% endblock %} 

{% block middle -%}

    <div class="col-md-2"></div>
    <div class="col-md-8">
    {{ form_start(form, {'attr':{'role':'form'}}) }}
   
    <div class="form-group">
        <label for="form_name">Nazwa: </label>

        {{ form_widget(form.name, {'attr':{'class':'form-control'}})}}
    </div>
    <div class="form-group">
        <label for="form_description">Opis: </label>

        {{ form_widget(form.description, {'attr':{'class':'form-control'}})}}
    </div>
    <div class="form-group">
        <label for="form_date">Data: </label>
        {{ form_widget(form.date)}}
    </div>
    <div class="form-group">
        <label for="form_city">Miasto: </label>
        {{ form_widget(form.city, {'attr':{'class':'form-control'}})}}
    </div>
   <div class="form-group">
        <label for="form_street">Ulica: </label>
        {{ form_widget(form.street, {'attr':{'class':'form-control'}})}}
    </div>
    <div class="form-group">
        <label for="form_streetNumber">Numer domu: </label>
        {{ form_widget(form.streetNumber, {'attr':{'class':'form-control'}})}}
    </div>
    <div class="form-group">
        <label for="form_flatNumber">Numer mieszkania: </label>
        {{ form_widget(form.flatNumber, {'attr':{'class':'form-control'}})}}
    </div>
    <div class="form-group">
        <label for="form_postcode">Kod pocztowy: </label>
        {{ form_widget(form.postcode, {'attr':{'class':'form-control'}})}}
    </div>
    <div class="form-group">
        <label for="form_eventAdmin">Organizator: </label>
        {{ form_widget(form.eventAdmin, {'attr':{'class':'form-control'}})}}
    </div>
    <input class="btn btn-custom" type="submit" value="{{ 'Dodaj'|trans }}" />
    
    {{ form_end(form) }}
    </div>
    <div class="col-md-2"></div>

{% endblock %}
