{% extends '::base.html.twig' %}

{% block top %}
    <h2 class="text-center">
        {% if message.sender != loggedUser %}
            Wiadomość od: {{message.sender.username|capitalize}}
        {% else %}
            Wiadomość do: {{message.receiver.username|capitalize}}
        {% endif %}    
    </h2>
    <a class="btn btn-custom" href="{{ path('message') }}">
        <span class="glyphicon glyphicon-arrow-left"></span>
        Powrót do listy
    </a>
{% endblock %}    

{% block middle %}  
    <h4>{{ message.title }}</h4>
    <p class="well">{{ message.text }}</p>
    <p>{{ message.date|date('Y-m-d H:i:s') }}</p>
 
    {% if message.sender != loggedUser %}
        <a class="btn btn-custom" href="/message/new/{{message.sender.id}}">Odpowiedz</a>
    {% endif %}    
{% endblock %}
